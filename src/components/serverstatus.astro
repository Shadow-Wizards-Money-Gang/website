<div id="server-status">
  <p id="loading-indicator">ğŸ”„ Checking server status...</p>
</div>

<script>
const SERVER_HOST = 'play.shadow-wizards.org';

async function checkServerStatus() {
  const statusElement = document.getElementById('server-status')!;
  const loadingIndicator = document.getElementById('loading-indicator')!;
  
  loadingIndicator.style.display = 'block';
  
  try {
    const response = await fetch(`https://api.mcsrvstat.us/2/${SERVER_HOST}`);
    const data = await response.json();
    loadingIndicator.style.display = 'none';

    if (data.online) {
      statusElement.innerHTML = `
        <p>Server is Online!</p>
        <p>ğŸŸ¢ ${data.players.online}/${data.players.max - 1} players online</p>
      `;
    } else {
      statusElement.innerHTML = '<p>âŒ Server is Offline</p>';
    }
  } catch (error) {
    loadingIndicator.style.display = 'none';
    statusElement.innerHTML = '<p>âš ï¸ Error fetching server status</p>';
  }
}

checkServerStatus();
</script>
